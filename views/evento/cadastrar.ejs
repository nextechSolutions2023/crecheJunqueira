<script src="/js/evento/cadastrar.js"></script>

  <div class="content" style="height: 100vh;">
    <div class="row">
      <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="card card-user">
            <div class="card-header">
              <h5 class="card-title">Cadastrar Evento</h5>
            </div>
            <div class="card-body" style="box-sizing:initial;">
              <form>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="inputNome">Nome<b class="required">*</b></label>
                      <input type="text" class="form-control" placeholder="Nome do evento" id="inputNome">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-3 pr-1">
                    <div class="form-group">
                      <label for="inputData">Data<b class="required">*</b></label>
                      <input type="datetime-local" class="form-control" id="inputData">
                      <div id="inputDataError" style="color: red; font-size: 12px; display: none;"></div>
                    </div>
                  </div>
                  <div class="col-md-9 pl-1">
                    <div class="form-group">
                      <label for="inputLocal">Local<b class="required">*</b></label>
                      <input type="text" class="form-control" placeholder="Local do evento" id="inputLocal">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="inputDescricao">Descrição<b class="required">*</b></label>
                      <input type="text" class="form-control textarea" placeholder="Descrição do evento aqui" id="inputDescricao"></input>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-8 pr-1">
                    <div class="form-group">
                      <label for="inputImagem">Imagem do evento</label><br>
                      <input type="file" class="form-control" id="inputImagem" />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-8 pr-1">
                    <div>
                      <img id="previaImagem" width="200px" />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="update ml-auto mr-auto">
                    <a href="/evento" class="btn btn-default">Voltar</a>
                    <button class="btn btn-primary" type="button" id="btnGravar">Cadastrar</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


