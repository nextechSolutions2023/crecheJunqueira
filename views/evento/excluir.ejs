<script src="/js/evento/excluir.js"></script>

<div class="content" style="height: 100vh;">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="card card-user">
          <div class="card-header">
            <h5 class="card-title">Excluir cadastro de Evento</h5>
          </div>
          <div class="card-body" style="box-sizing:initial;">
            <form>
              <div class="row">
                <div class="col-md-3 pr-1">
                  <div class="form-group">
                    <label for="inputCodigo">Codigo<b class="required"></b></label>
                    <input disabled type="text" value="<%= eventoExcluir.eventoCodigo %>" class="form-control" placeholder="Codigo" id="inputCodigo">
                  </div>
                </div>
                <div class="col-md-9 pl-1">
                  <div class="form-group">
                    <label for="inputNome">Nome<b class="required">*</b></label>
                    <input disabled type="text" value="<%= eventoExcluir.eventoNome %>" class="form-control" placeholder="Nome do evento" id="inputNome">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="inputDescricao">Descrição<b class="required">*</b></label>
                    <input disabled type="text" value="<%= eventoExcluir.eventoDescricao %>" class="form-control textarea" placeholder="Descrição do evento aqui" id="inputDescricao"></input>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8 pr-1">
                  <div class="form-group">
                    <label for="inputImagem">Imagem do produto</label><br>
                    <input disabled class="form-control" type="file" id="inputImagem" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8 pr-1">
                  <div>
                    <img id="previaImagem" width="200px" src="<%= eventoExcluir.imagem %>" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="update ml-auto mr-auto">
                  <a href="/evento" class="btn btn-default btn-round">Voltar</a>
                  <button type="button" class="btn btn-danger btn-round" id="btnExcluir">Confirmar e excluir</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

