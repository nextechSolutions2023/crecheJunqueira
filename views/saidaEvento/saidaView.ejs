<script src="/js/saidaView/script.js"></script>
<div class="content" style="height: 100vh;">
    <div class="row">
      <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="card card-user">
            <div class="card-header">
              <h5 class="card-title">Saida Para Evento</h5>
            </div>
            <div class="card-body" style="box-sizing:initial;">
              <div class="row">
                <div class="col-md-8 pr-1">
                  <div>
                    <img id="previaImagem" width="200px" src="<%= saidaEvento.imagem %>" />
                  </div>
                </div>
              </div>
              <form>
                <div class="row">
                  <div class="col-md-3 pr-1">
                    <div class="form-group">
                      <input type="hidden" id="inputCodigo" value="<%= saidaEvento.eventoCodigo %>">
                      <label for="inputRef">Ref<b class="required"></b></label>
                      <input type="text" value="<%= saidaEvento.eventoRef %>" class="form-control" placeholder="Ref" id="inputRef">
                    </div>
                  </div>
                  <div class="col-md-9 pl-1">
                    <div class="form-group">
                      <label for="inputNome">Nome<b class="required"></b></label>
                      <input type="text" value="<%= saidaEvento.eventoNome %>" class="form-control" placeholder="Nome do evento" id="inputNome">
                    </div>
                  </div>
                </div>
  
                <div class="row">
                  <div class="col-md-3 pr-1">
                    <div class="form-group">
                      <label for="inputData">Data<b class="required"></b></label>
                      <input type="datetime-local" value="<%= saidaEvento.eventoData.toISOString().substring(0, 16) %>" class="form-control" id="inputData">
                    </div>
                  </div>
                  <div class="col-md-9 pl-1">
                    <div class="form-group">
                      <label for="inputLocal">Local<b class="required"></b></label>
                      <input type="text"value="<%= saidaEvento.eventoLocal %>" class="form-control" placeholder="Local do evento" id="inputLocal">
                    </div>
                  </div>
                </div>
  
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="inputDescricao">Descrição<b class="required"></b></label>
                      <input type="text" value="<%= saidaEvento.eventoDescricao %>" class="form-control textarea" placeholder="Descrição do evento aqui" id="inputDescricao"></input>
                    </div>
                  </div>
                </div>
                <table class="table">
                  <thead class="text-primary">
                    <th>Nome do Voluntário</th>
                  </thead>
                  <tbody>
                    <% infoVoluntario.map(function(value, index) { %>
                      <tr>
                        <td><input type="checkbox" id="voluntario_<%= value.codigo %>" data-nome="<%= value.nome %>"> <%= value.nome %></td>
                      </tr>
                  <% }) %>
                  </tbody>
              </table>
              <table class="table">
                <thead class="text-primary">
                  <th>Patrimonio</th>
                </thead>
                <tbody>
                  <% infoPatrimonio.map(function(value, index) { %>
                      <tr>
                          <td><%= value.descricao %> 
                              <!-- Adiciona um data-atributo para armazenar o ID do patrimônio -->
                              <input type="number" value="<%= value.quantidade %>" data-id="<%= value.id %>">
                          </td>
                      </tr>
                  <% }) %>
              </tbody>
              </table>
                <div class="row">
                  <div class="update ml-auto mr-auto">
                    <a href="/saidaEvento" class="btn btn-secondary btn-round">Voltar</a>
                    <button class="btn btn-primary btn-round" id="btnDarSaida">Dar Saida</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>