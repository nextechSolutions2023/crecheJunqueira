                        <div class="card-body">
                            <div class="table-responsive">
                            <table class="table" id="tabelaVendas">
                                <thead class="text-primary">
                                    <!-- corrigir as colunas q vai trazer na tabela -->
                                    <th>Código</th>
                                    <th>Data</th>
                                    <th>Cód. do Produto</th>
                                    <th>Descrição</th>
                                    <th>Valor Unitário</th>
                                    <th>Quantidade vendida</th>
                                    <th>Valor Total</th>
                                </thead>
                                <tbody>
                                    <% if(vendas.length > 0) { %>
                                        <% vendas.forEach(venda => { %>
                                            <tr>
                                                <td><%= venda.vendas_codigo %></td>
                                                <td><%= venda.data %></td>
                                                <td><%= venda.produtos_codigo %></td>
                                                <td><%= venda.descricao %></td>
                                                <td><%= venda.preco == null ? 'R$ 0,00' : parseFloat(venda.preco).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %></td>
                                                <td><%= venda.quantidade %></td>
                                                <td><%= venda.total == null ? 'R$ 0,00' : parseFloat(venda.total).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center">Nenhuma Venda Encontrada.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
