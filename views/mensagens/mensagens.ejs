
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Mensagens Recebidas</title>
            <link rel="stylesheet" href="/css/mensagens.css">
        </head>
        <div class="content" style="height: 100%;">
            <div class="row">
            <div class="col-md-12">
                <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Mensagens recebidas</h4>
                </div>
                <div>
                    <!-- <a style="margin:10px" class="btn btn-primary new" style="float:right" href="/doadores/cadastrar" >Cadastrar Doador &nbsp; <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="fa fa-plus" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                        </svg>
                        </svg>
                    </a> -->
                </div>
                    <div class="card-body">
                        <div id="mensagensContainer">
                            <% if (mensagens.length > 0) { %>
                                <!-- Utilizando a função forEach para iterar sobre o array de mensagens -->
                                <% mensagens.forEach(mensagem => { %>
                                    <div class="mensagem">
                                        <p><strong>Nome:</strong> <%= mensagem.getNome() %></p>
                                        <p><strong>Email:</strong> <%= mensagem.getEmail() %></p>
                                        <p><strong>Assunto:</strong> <%= mensagem.getAssunto() %></p>
                                        <p><strong>Mensagem:</strong> <%= mensagem.getMensagem() %></p>
                                        <!-- Verifica se existe um arquivo associado à mensagem -->
                                        <% if (mensagem.getArquivo()) { %>
                                            <!-- Renderiza um link para visualizar o arquivo -->
                                            <p><a href="/public/docs/<% mensagem.getArquivo() %>" target="_blank">Visualizar Arquivo</a></p>
                                        <% } %>
                                        <button data-codigo="<%= mensagem.getCodigo() %>" class="btn btn-danger btnExcluir">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                                            </svg>
                                        </button>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <p>Nenhuma mensagem encontrada.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
    <script src="/js/contato/mensagemListar.js"></script>
 
